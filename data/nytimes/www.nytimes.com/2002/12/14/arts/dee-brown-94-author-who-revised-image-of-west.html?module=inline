        window.advBidxc.loadGPT = setTimeout(loadGPT, window.advBidxc.timeout);

        
            if (!window.headertag) {
                // append index
                var a = document.createElement('script');
                a.type = 'text/javascript';
                a.async = true;
                a.src = indexBid;
                s.parentNode.insertBefore(a, s);
            }

        

        if (!window.advBidxc.isLoaded) {
